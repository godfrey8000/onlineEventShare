# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/trackerdb?schema=public"

# For Docker deployment, use:
# DATABASE_URL="postgresql://postgres:password@db:5432/trackerdb?schema=public"

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET="change-this-to-a-random-secret-string"

# CORS Configuration
# For development:
CORS_ORIGIN=http://localhost:5173
# For production (comma-separated for multiple origins):
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Server Port
PORT=8080

# Database Password (for docker-compose)
DB_PASSWORD=postgres

# Node Environment
NODE_ENV=development
